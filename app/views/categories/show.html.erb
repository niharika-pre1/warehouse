<h2>Categories</h2>
<p>
  <strong>name:</strong>
  <%= @category.name %>
</p>

<h2>Add a Product:</h2>
<%= form_with(model: [@category,@category.products.build ], local: true) do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :Description %><br>
    <%= form.text_field :description %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back' %>
